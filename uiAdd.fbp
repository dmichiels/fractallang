% First step : two fields
f1(text) ui_create_out -> ui_create_in#1 lr(lr)
f1() events_out_default -> events lr()
f2(text) ui_create_out -> ui_create_in#2 lr()
f2() events_out_default -> events lr()

% second step : lr, Button and result field
lr() ui_create_out -> ui_create_in#1 td(td)
lr() events_out_default -> events td()
calcButton(button) ui_create_out -> ui_create_in#2 td()
calcButton() events_out_default -> events td()
fResult(text) ui_create_out -> ui_create_in#3 td()
fResult() events_out_default -> events td()

% Third step td to widnow
td() ui_create_out -> ui_create_in win(window)
td() events_out_default -> events win()
win() events_out_default -> input dispDefault(display)

% size of field
"opt(height:1 width:15)" -> options fResult()
"opt(height:1 width:15)" -> options f1()
"opt(height:1 width:15)" -> options f2()

% Logic
% Button to get
calcButton() events_out#button_clicked -> input get1(string) out -> events f1()
get1() out -> events f2()
"opt(text:get(getAdd))" -> options get1()
% Field to logicAdd
f1() events_out#getAdd -> input#1 add(add) output -> input setAdd(string) out -> events fResult()
f2() events_out#getAdd -> input#2 add() 
"opt(text:set)" -> options setAdd()

% Some options
"opt(pre:'default ')" -> options dispDefault()
"opt(text:'calc')" -> options calcButton()
"opt(title:'Calculator')" -> options win()