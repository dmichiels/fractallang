% ---
% Action flow
in => in awIn(QTk/actionsWrapper) out -> in awOut(QTk/actionsWrapper) out => out
awOut() action => action

% ---
% UI flow
awIn() action#create -> in create(editor/component/create)
create() bg -> in bg(QTk/canvas/oval) out -> in awOut()
create() border -> in border(QTk/canvas/oval) out -> in awOut()
create() name -> in name(QTk/canvas/text) out -> in awOut()
create() comp -> in compManager(editor/component/compManager) out -> in awOut()
% --- 
% Mouse logic : drag&drop, show/hide, inComponent/outComponent
bg() action#Enter -> in mouseLogic(editor/component/mouseLogic)
bg() action#Leave -> in mouseLogic()
bg() action#ButtonPress -> in mouseLogic()
bg() action#ButtonRelease -> in mouseLogic()
bg() action#Motion -> in mouseLogic()
% drag&drop
mouseLogic() dnd -> input dnd(dnd/dndLogic) move -> in bg()
dnd() move -> in name()
dnd() move -> in border()
dnd() move -> in awOut() action#move -> input discard(discard)
% incomp/outcomp
mouseLogic() out -> in awOut()
% show
mouseLogic() disp -> in compManager()

% ---
% Border managment
border() action#ButtonPress -> in compManager()
compManager() createLink -> comp createLinkLogic(editor/component/createLinkLogic)
border() action#ButtonPress -> input ieGetPos(ipEdit) out -> in name()
"opt(text:getCoords(output:getPos))" -> options ieGetPos()
name() action#getPos -> pos createLinkLogic()
createLinkLogic() out -> in awOut()

% ---
% show/hide
awIn() action#displayComp -> input discard()
awIn() action#closeComp -> input discard()

% ---
% Events from outside
awIn() action#start -> in compManager()
awIn() action#stop -> in compManager()
awIn() action#newComp -> in compManager()
awIn() action#options -> in compManager()
% delete
awIn() action#delete -> in compManager()
awIn() action#delete -> in border()
awIn() action#delete -> in bg()
awIn() action#delete -> in name()
awIn() action#delete -> in awOut() action#delete -> input discard()