% ---
% Action flow
in => in awIn(QTk/actionsWrapper) out -> in awOut(QTk/actionsWrapper) out => out
awOut() action => action

% ---
% UI flow
awIn() action#create -> in create(editor/component/create)
create() name -> in name(QTk/canvas/text) out -> in awOut()
create() comp -> in compManager(editor/component/compManager) out -> in awOut()
create() image -> in image(QTk/canvas/image) out -> in awOut()
"photo(file:"./components/editor/images/circle.gif")" -> input im(QTk/image) output -> image image()
create() canvas -> options scLogic(editor/component/singleclickLogic)

% --- 
% Mouse logic : drag&drop, show/hide, inComponent/outComponent
image() action#Enter -> in mouseLogic(editor/component/mouseLogic)
image() action#Leave -> in mouseLogic()
image() action#ButtonPress -> in mouseLogic()
image() action#ButtonRelease -> in mouseLogic()
image() action#Motion -> in mouseLogic()
name() action#Enter -> in mouseLogic(editor/component/mouseLogic)
name() action#Leave -> in mouseLogic()
name() action#ButtonPress -> in mouseLogic()
name() action#ButtonRelease -> in mouseLogic()
name() action#Motion -> in mouseLogic()

% drag&drop
mouseLogic() move -> in name()
mouseLogic() move -> in awOut() action#move -> input discard(discard)
mouseLogic() move -> in image()
% incomp/outcomp
mouseLogic() out -> in awOut()

mouseLogic() sc -> click scLogic()
mouseLogic() sc -> input ieGetPos(ipEdit) out -> in name()
"opt(text:getCoords(output:getPos))" -> options ieGetPos()
name() action#getPos -> pos scLogic()
scLogic() out -> in compManager()


% ---
% Rename
awIn() action#nameChange -> in compManager()
compManager() name -> in name()

% ---
% show/hide
awIn() action#displayComp -> input discard()
awIn() action#closeComp -> input discard()

% ---
% Events from outside
awIn() action#start -> in compManager()
awIn() action#stop -> in compManager()
awIn() action#newComp -> in compManager()
awIn() action#options -> in compManager()
% delete
awIn() action#delete -> in compManager()
awIn() action#delete -> in name()
awIn() action#delete -> in image()
awIn() action#delete -> in awOut() action#delete -> input discard()