% ---
% Action flow
in => in awIn(QTk/actionsWrapper) out -> in awOut(QTk/actionsWrapper) out => out
awOut() action => action

% ---
% Model
awIn() action#create -> in model(editor/component/model)

% ---
% View

% Component
% Display a name and a picture
model() canvas -> in canvas(QTk/canvas) out -> in awOut()
model() name -> in name(QTk/canvas/text) out -> widget canvas()
model() canvasImage -> in canvasImage(QTk/canvas/image) out -> widget canvas()
model() image -> input image(QTk/image) output -> image canvasImage()
% Display the control view
canvasImage() action#ButtonPress -> mouse model()
name() action#ButtonPress -> mouse model()

% Control
"create(bg:white)" -> in control(QTk/td) out -> push#control push(ip/pushAction) out -> in awOut()

% name
model() controlName -> in label(QTk/label) out -> place#1 control()
model() controlType -> in type(QTk/label) out -> place#2 control()
% start
"create(text:\"Start\" glue:ens)" -> in startButton(QTk/button) out -> place#3 control()
startButton() action#button_clicked -> start model()
% stop
"create(text:\"Stop\" glue:ens)" -> in stopButton(QTk/button) out -> place#4 control()
stopButton() action#button_clicked -> stop model()
% start
"create(text:\"Load\" glue:ens)" -> in loadButton(QTk/button) out -> place#5 control()
loadButton() action#button_clicked -> input compLoad(editor/component/compLoad) output -> load model()
% start
"create(text:\"Delete\" glue:ens)" -> in deleteButton(QTk/button) out -> place#6 control()
deleteButton() action#button_clicked -> delete model()

model() control -> in control()

% Options